---
import isotipo from '../assets/isotipo.svg';
import logotipo from '../assets/logotipo.svg';
---

<footer class="bg-white border-t">
  <div class="max-w-7xl mx-auto px-4 py-12 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-5 gap-8">
      
      <!-- Logo y descripción -->
      <div class="space-y-4">
        <img src={isotipo.src} alt="Isotipo" class="h-18 pt-2 w-auto" />
        <p class="text-gray-500 text-sm">Making the world a better place through constructing elegant hierarchies.</p>
        <div class="flex space-x-4">
          <a href="#"><i class="fab fa-facebook-f text-gray-500 hover:text-gray-700"></i></a>
          <a href="#"><i class="fab fa-instagram text-gray-500 hover:text-gray-700"></i></a>
          <a href="#"><i class="fab fa-x-twitter text-gray-500 hover:text-gray-700"></i></a>
          <a href="#"><i class="fab fa-github text-gray-500 hover:text-gray-700"></i></a>
          <a href="#"><i class="fab fa-youtube text-gray-500 hover:text-gray-700"></i></a>
        </div>
      </div>

      <!-- Columnas de enlaces -->
      <div>
        <h3 class="text-sm font-semibold text-gray-900 tracking-wider uppercase">Solutions</h3>
        <ul class="mt-4 space-y-2 text-sm text-gray-500">
          <li><a href="#">Marketing</a></li>
          <li><a href="#">Analytics</a></li>
          <li><a href="#">Automation</a></li>
          <li><a href="#">Commerce</a></li>
          <li><a href="#">Insights</a></li>
        </ul>
      </div>

      <div>
        <h3 class="text-sm font-semibold text-gray-900 tracking-wider uppercase">Support</h3>
        <ul class="mt-4 space-y-2 text-sm text-gray-500">
          <li><a href="#">Submit ticket</a></li>
          <li><a href="#">Documentation</a></li>
          <li><a href="#">Guides</a></li>
        </ul>
      </div>

      <div>
        <h3 class="text-sm font-semibold text-gray-900 tracking-wider uppercase">Company</h3>
        <ul class="mt-4 space-y-2 text-sm text-gray-500">
          <li><a href="#">About</a></li>
          <li><a href="#">Blog</a></li>
          <li><a href="#">Jobs</a></li>
          <li><a href="#">Press</a></li>
        </ul>
      </div>

      <div>
        <h3 class="text-sm font-semibold text-gray-900 tracking-wider uppercase">Legal</h3>
        <ul class="mt-4 space-y-2 text-sm text-gray-500">
          <li><a href="#">Terms of service</a></li>
          <li><a href="#">Privacy policy</a></li>
          <li><a href="#">License</a></li>
        </ul>
      </div>
    </div>

    <div class="mt-12 border-t pt-8 text-sm text-gray-400 text-center">
      © 2025 Idílico, Todos los derechos reservados.
    </div>
  </div>
</footer>
