
<div id="product-modal" class="hidden fixed inset-0 z-50 overflow-y-auto">
  <!-- Fondo oscuro -->
  <div class="fixed inset-0 bg-gray-500/75 backdrop-blur-sm transition-opacity"></div>

  <div class="flex min-h-full items-stretch justify-center text-center p-4 sm:items-center sm:p-0">
    <div class="relative w-full transform overflow-hidden rounded-lg bg-white text-left shadow-2xl transition-all sm:my-8 sm:max-w-2xl">
      <!-- Botón cerrar -->
      <button id="close-modal" type="button" class="absolute top-4 right-4 text-primario hover:text-secundario cursor-pointer">
        <span class="sr-only">Close</span>
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>

      <div class="grid grid-cols-1 sm:grid-cols-12 gap-6 p-6">
        <!-- Imagen del producto -->
        <div class="sm:col-span-5">
          <img id="modal-image" src="" alt="Producto" class="w-full rounded-lg h-100 bg-gray-100 object-cover aspect-[3/4]" />
        </div>

        <!-- Detalles del producto -->
        <div class="sm:col-span-7 flex flex-col justify-between">
          <div>
            <h2 id="modal-title" class="text-5xl font-bold text-primario"></h2>
            <p id="modal-price" class="mt-2 text-4xl text-secundario font-medium"></p>

            <!-- Colores -->
            <div class="mt-6">
              <h3 class="text-lg font-medium text-primario">Colores disponibles</h3>
              <div id="modal-colors" class="mt-4 flex items-center gap-3">
                <!-- Colores dinámicos aquí -->
              </div>
            </div>

            <!-- Tallas -->
            <div class="mt-6">
              <div class="flex items-center justify-between">
                <h3 class="text-lg font-medium text-primario">Tamaños disponibles</h3>
                <a href="#" class="text-sm font-medium text-indigo-600 hover:text-indigo-500">Guía de tallas</a>
              </div>
              <div id="modal-sizes" class="mt-4 grid grid-cols-4 gap-4">
                <!-- Tallas dinámicas aquí -->
              </div>
            </div>
          </div>

          <!-- Botón principal -->
          <a id="whatsapp-link" target="_blank" class="mt-6 flex w-full items-center justify-center rounded-md bg-secundario px-8 py-3 text-primario font-medium transition hover:bg-terciario">
            Consultar por WhatsApp
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
